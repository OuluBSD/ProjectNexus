#!/usr/bin/env node

// Nexus CLI Entry Point
// This is the main entry point for the Nexus CLI
// It executes the compiled JavaScript from dist/

import { spawn } from 'child_process';
import { fileURLToPath } from 'url';
import { dirname, join } from 'path';

const __filename = fileURLToPath(import.meta.url);
const __dirname = dirname(__filename);

// Execute the compiled JavaScript file with proper ESM support
const distMainPath = join(__dirname, '..', 'dist', 'main.js');

// Use node to run the compiled main JavaScript file with the --import option
const nodeArgs = [
  '--import', 'tsx',
  distMainPath,
  ...process.argv.slice(2)
];

const child = spawn('node', nodeArgs, {
  stdio: 'inherit',
  cwd: process.cwd()
});

child.on('error', (err) => {
  console.error('Failed to start Nexus CLI:', err.message);
  // Try to provide helpful error message
  if (err.code === 'ENOENT') {
    console.error('Make sure you have run `npm run build` first to compile the TypeScript code.');
  }
  process.exit(1);
});

child.on('close', (code) => {
  process.exit(code || 0);
});